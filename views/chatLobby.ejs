      <main class="join-main">
        <form action="chatroom">
          <div class="form-control">
            <label for="username">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              placeholder="Enter username..."
              required
            />
          </div>
          <div class="form-control">
            <label for="room">Room</label>
            <select name="room" id="room">
              <option value="General Chat">General Chat</option>
              <option value="Handling Stress">Handling Stress</option>
              <option value="Dealing With Anxiety">Dealing With Anxiety</option>
              <option value="Student Wellbeing Tips">Student Wellbeing Tips</option>
              <option value="Feeling Lonely">Feeling Lonely</option>
            </select>
          </div>
          <button type="submit" class="btn">Join Chat</button>
        </form>
